//https://docs.aws.amazon.com/AmazonECS/latest/developerguide/task_definition_parameters.html#container_definitions
//We are following the format for the amazon ecs service link provided above for Container Definitions (Task Definitions) for each container that we are intending to run.
{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "react-client",
            "image": "ahy94/dockerizing-multiple-services-react-client",
            "hostname": "react-client",
            "essential": false
        },
        {
            "name": "express-server",
            "image": "ahy94/dockerizing-multiple-services-express-server",
            "hostname": "express-server",
            "essential": false
        },
        {
            "name": "worker",
            "image": "ahy94/dockerizing-multiple-services-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "ahy94/dockerizing-multiple-services-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["react-client", "express-server"]
        }
    ]
}
